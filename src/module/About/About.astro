---
import SocialGroup from "./SocialGroup.astro";
import saturn from '../../assets/images/bsas.webp';
import bsas_mobile from '../../assets/images/bsas_mobile.webp';
---
<section class="About" id="about">   
    <div class="About-content About-spacing">
        <div>
            <h2 class="About-text About-title">Front-End Developer</h2>
            <p class="About-text About-bio">I'm Pablo Benito, Computer Technician and Front-End developer from Buenos Aires, Argentina. I love developing user interfaces with Vue and TypeScript.</p>
        </div>
        <SocialGroup />
    </div>
    <div class="About-content">
        <picture>
            <source media="(max-width: 450px)" srcset={bsas_mobile}>
            <img 
            src={saturn} 
            alt="saturn photo"
            class="About-image">
        </picture>
    </div>
</section>
<style lang="scss">
    .About{
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(min(25rem, 100%), 1fr));
        grid-auto-rows: auto;
        gap: .9375rem;
        background-color: var(--color-white);
        padding: var(--padding);
        max-width: var(--max-width);
        margin: auto;
        &-title{
            font-size: clamp(1.3em, 3vw, 3em);
            margin: 0 0 .3125rem 0;
            text-transform: uppercase;
        }
        &-bio{
            font-family: var(--secundary);
            color: var(--color-grey);
            font-size: clamp(1em, 2vw, 2em);
        }
        &-text{
            line-height: 100%;
        }
        &-spacing{
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            gap: 1.25rem;
        }
    }
</style>